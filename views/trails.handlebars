<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title></title>
  {{#each css}}
    <link rel="stylesheet", href ="./css/{{this}}">
  {{/each}}
</head>

<body>

<!-- Navigation Bar -->
  <div class = "header">
  	<div class = "trailTab" class = "active"> Trails </div>
  	<div class = "userTab"> Profile </div>
  </div>

<!-- Page Content -->
  <div class = "content">
  	<div class = "search">
  		<h2> Find Trails </h2>
  		<form method="POST" action = "/">
  			<input type = "text" name = "zipcode" value = "Enter Your Zip Code"> </input>
  			<!-- Get the location of the device-->
  			<input type = "submit"> </input>
  		</form>

  	<div class = "trailList">
      {{#each this}}
    		<div id = "trail">
              <b>{{this.name}}</b>
              <span>Trail Length: {{this.length}}</span>
              <span>Trail Difficulty: {{this.difficulty}}</span>
              <button> More Information </button>
    		</div>
      {{/each}}
  	</div>
  </div>
    {{#each js}}
      <link href="./js/{{this}}", rel="stylesheet">
    {{/each}}
</body>

</html>
